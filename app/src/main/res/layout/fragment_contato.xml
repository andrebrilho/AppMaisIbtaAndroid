<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.brilho.maisibta.MainActivity">

    <EditText
        android:id="@+id/contato_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/avatar"
        android:textSize="15sp"
        android:padding="20px"
        android:drawablePadding="8dp"
        android:hint="Nome"
        android:paddingTop="15dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/Cinza" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawablePadding="12dp"
        android:padding="20px"
        android:drawableLeft="@drawable/envelope"
        android:paddingTop="2dp"
        android:textSize="15sp"
        android:id="@+id/contato_email"
        android:textColorHint="@color/Cinza"/>

    <EditText
        android:id="@+id/contato_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:drawableLeft="@drawable/phone"
        android:hint="Telefone"
        android:textSize="15sp"
        android:drawablePadding="12dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColorHint="@color/Cinza" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assunto"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/contato_assunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="2dp"
        android:textColorHint="@color/Cinza" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="@color/Branco"
            android:backgroundTint="@color/colorPrimary"
            android:id="@+id/contato_formulario_btnSalvar"
            />
    </RelativeLayout>


</LinearLayout>