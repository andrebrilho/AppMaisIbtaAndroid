<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.brilho.maisibta.ForumalarioMaterias">

    <EditText
        android:id="@+id/fomulario_materia"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pen"
        android:padding="20px"
        android:drawablePadding="20dp"
        android:hint="Matéria"
        android:paddingTop="15dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/Cinza" />

    <EditText
        android:layout_width="match_parent"
        android:padding="20px"
        android:layout_height="wrap_content"
        android:hint="Professor"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/professor"
        android:paddingTop="2dp"
        android:textSize="15sp"
        android:id="@+id/fomulario_professor"
        android:textColorHint="@color/Cinza"/>

    <EditText
        android:id="@+id/fomulario_nota_prova_1"
        android:layout_width="match_parent"
        android:padding="20px"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/prova"
        android:hint="Nota prova 1"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColorHint="@color/Cinza" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota prova 2"
        android:textSize="15sp"
        android:drawablePadding="20dp"
        android:padding="20px"
        android:drawableLeft="@drawable/prova"
        android:paddingTop="2dp"
        android:id="@+id/fomulario_nota_prova_2"
        android:textColorHint="@color/Cinza"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota ED"
        android:drawablePadding="20dp"
        android:textSize="15sp"
        android:padding="20px"
        android:drawableLeft="@drawable/ed"
        android:paddingTop="2dp"
        android:id="@+id/formulario_nota_ed"
        android:textColorHint="@color/Cinza"/>

    <Button
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simular Média"
        android:textColor="@color/Branco"
        android:backgroundTint="@color/colorAccent"
        android:alpha="1"
        android:id="@+id/formulario_btnCalcMedia"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"

        android:textColor="@color/Branco"
        android:backgroundTint="@color/colorPrimary"

        android:id="@+id/formulario_btnSalvar"
        />
</RelativeLayout>


</LinearLayout>


